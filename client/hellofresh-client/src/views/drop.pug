
.tile.is-ancestor.is-12
	.tile.is-parent.is-6
		.tile.is-child.is-vertical
			input.input.tile(placeholder="ingredient search!" type="text" v-model='ingredient' @keyup.enter='search' @keyup='ingFilter(ingredient)' @input='ingFilter(ingredient)')
			.tile(class='dropdown' :class="{'is-active' : ingListFilter.length > 0}")
				.dropdown-menu
					.dropdown-content
						div.dropdown-item(@click="dropClick" v-for='(data, index) in ingListFilter' :key='index') {{data}}
	//- query array
	.tile.is-parent.is-6
		.is-child
			span.tag.button(v-for='(ing, index) in ingQuery' :key='index' v-if='(ing)')
				p {{ing + ' '}}
					span(@click='deleteIng(ing)')
						i.fas.fa-minus-circle


